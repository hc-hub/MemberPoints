@model IEnumerable<MemberPoint.Entity.ViewModel.UsersViewModel>
@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_Common.cshtml";
}
<div id="content" class="col-md-12">
    <!-- page header -->
    <div class="pageheader">
        <h2><i class="fa fa-puzzle-piece" style="line-height: 48px;padding-left: 5px;"></i> 用户列表 <span></span></h2>
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li>现在位置：</li>
                <li><a href='@Url.Action("UsersList","Users")'>用户模块</a></li>
                <li><a href='@Url.Action("UsersList","Users")'>用户列表信息</a></li>
                <li class="active">用户信息</li>
            </ol>
        </div>
    </div>
    <!-- /page header -->
    <!-- content main container -->
    <div class="main">
        <!-- row -->
        <div class="row">
            <!-- col 6 -->
            @*<div class="col-md-6">*@
            <!-- tile -->
            <section class="tile color transparent-white">
                <!-- tile header -->
                <div class="tile-header">
                    <h1><strong>用户</strong> 列表</h1>
                    <div class="search">
                        <input type="text" placeholder="Search...">
                    </div>
                    <div class="controls">
                        <a href="#" class="refresh"><i class="fa fa-refresh"></i></a>
                        <a href="#" class="remove"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <!-- /tile header -->
                <!-- tile widget -->
                <div class="tile-widget bg-transparent-white-2" style="display:none">
                    <div class="row">

                        <div class="col-sm-4 col-xs-6">
                            <div class="input-group table-options">
                                <select class="chosen-select form-control">
                                    <option>Bulk Action</option>
                                    <option>Delete Selected</option>
                                    <option>Copy Selected</option>
                                    <option>Archive Selected</option>
                                </select>
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">Apply</button>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-8 col-xs-6 text-right">
                            <div class="btn-group btn-group-xs table-options">
                                <button type="button" class="btn btn-default">Day</button>
                                <button type="button" class="btn btn-default">Week</button>
                                <button type="button" class="btn btn-default">Month</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /tile widget -->
                <!-- tile body -->
                <div class="tile-body no-vpadding">
                    <table class="table table-custom table-sortable">
                        <thead>
                            <tr>
                                <th style="width: 40px;">
                                    <div class="checkbox check-transparent">
                                        <input type="checkbox" value="1" id="allchck2">
                                        <label for="allchck2"></label>
                                    </div>
                                </th>
                                <th class="sortable sort-asc">@Html.DisplayNameFor(model => model.S_Name)</th>
                                <th class="sortable sort-numeric">@Html.DisplayNameFor(model => model.U_LoginName)</th>
                                <th class="sortable sort-amount">@Html.DisplayNameFor(model => model.U_RealName)</th>
                                <th class="sortable sort-amount">@Html.DisplayNameFor(model => model.U_Sex)</th>
                                <th class="sortable sort-amount">@Html.DisplayNameFor(model => model.U_Telephone)</th>
                                <th class="sortable sort-amount">@Html.DisplayNameFor(model => model.U_RoleName)</th>
                                <th style="width: 30px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="checkbox check-transparent">
                                            <input type="checkbox" value="1" id="chck06">
                                            <label for="chck06"></label>
                                        </div>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.S_Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.U_LoginName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.U_RealName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.U_Sex)</td>
                                    <td>@Html.DisplayFor(modelItem => item.U_Telephone)</td>
                                    <td>@Html.DisplayFor(modelItem => item.U_RoleName)</td>
                                    <td class="text-center"><a href="#" class="check-toggler checked"></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <table class="table table-custom table-sortable" id="usersList"></table>
                </div>
                <!-- /tile body -->
                <!-- tile footer -->
                <div class="tile-footer bg-transparent-white-2 rounded-bottom-corners">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="input-group table-options" style="display:none">
                                <select class="chosen-select form-control">
                                    <option>Bulk Action</option>
                                    <option>Delete Selected</option>
                                    <option>Copy Selected</option>
                                    <option>Archive Selected</option>
                                </select>
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">Apply</button>
                                </span>
                            </div>
                        </div>

                        <div class="col-sm-4 text-center">
                            <small class="inline table-options paging-info">showing 1-3 of 24 items</small>
                        </div>

                        <div class="col-sm-4 text-right sm-center">
                            <ul class="pagination pagination-xs nomargin pagination-custom">
                                <li class="disabled"><a href="#"><i class="fa fa-angle-double-left"></i></a></li>
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
                            </ul>
                        </div>

                    </div>
                </div>
                <!-- /tile footer -->
            </section>
            <!-- /tile -->
            @*</div>*@
            <!-- /col 6 -->
        </div>
        <!-- /row -->
    </div>
    <!-- /content container -->
</div>
