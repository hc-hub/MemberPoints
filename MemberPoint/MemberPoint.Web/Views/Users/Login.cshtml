@model MemberPoint.Entity.ViewModel.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Minimal 1.0 - Login Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8" />
    @*<link rel="icon" type="image/ico" href="http://tattek.com/minimal/assets/images/favicon.ico" />*@
    <!-- Bootstrap -->
    <link href="~/assets/css/vendor/bootstrap/bootstrap.min.css" rel="stylesheet">
    @*<link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">*@
    <link rel="stylesheet" href="~/assets/css/vendor/bootstrap-checkbox.css">
    <link href="~/assets/css/minimal.css" rel="stylesheet">
</head>
@using (Html.BeginForm("Login", "Users", FormMethod.Post, new { ReturnUrl = Request.QueryString["ReturnUrl"] }))
{
    <body class="bg-1">
        <!-- Wrap all page content here -->
        <div id="wrap">
            <!-- Make page fluid -->
            <div class="row">
                <!-- Page content -->
                <div id="content" class="col-md-12 full-page login">
                    <div class="inside-block">
                        <img src="~/assets/images/logo-big.png" alt="登陆图标" class="logo">
                        <h1><strong>欢迎</strong> 登录</h1>
                        <h5>会员积分管理系统</h5>
                        <form id="form-signin" class="form-signin">
                            <section>
                                <div class="input-group">
                                    @*<input type="text" class="form-control" name="username" placeholder="Username">*@
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "用户姓名" } })
                                    @Html.ValidationMessageFor(model => model.UserName)
                                    <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                </div>
                                <div class="input-group">
                                    @*<input type="password" class="form-control" name="password" placeholder="Password">*@
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "用户密码" } })
                                    @Html.ValidationMessageFor(model => model.Password)
                                    <div class="input-group-addon"><i class="fa fa-key"></i></div>
                                </div>
                            </section>
                            <section class="controls">
                                <div class="checkbox check-transparent">
                                    @*<input type="checkbox" value="1" id="remember" checked > 
                                    <label for="remember" >记住我</label>*@
                                </div>
                                <a href="#">忘记密码?</a>
                            </section>
                            <section class="log-in">
                                <button class="btn btn-greensea">登录</button>
                                <span>or</span>
                                <button class="btn btn-slategray">创建一个新的账号</button>
                            </section>
                        </form>
                    </div>
                </div>
                <!-- /Page content -->
            </div>
        </div>
        <!-- Wrap all page content end -->
    </body>
}
</html>
