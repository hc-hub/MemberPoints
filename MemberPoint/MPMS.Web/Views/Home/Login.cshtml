@model MemberPoint.Entity.ViewModel.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户登录</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/easyui/default/easyui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/easyui/icon.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/easyui/jquery-1.11.1.js" type="text/javascript"></script>
    <script src="~/Scripts/easyui/jquery-easyui-min.js" type="text/javascript"></script>
    <script src="~/Scripts/easyui/easyui-lang-zh_CN.js" type="text/javascript"></script>
    <link href="~/Content/login.css" rel="stylesheet" />
</head>
<body>
    <script type="text/javascript">

        $(function () {
            $(".login-btn").click(function () {
                $("form").submit();
            });

        })
    </script>
    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class='signup_container'>
            <h1 class='signup_title'>
                用户登陆
            </h1>
            <img src="../../Content/images/people.png" id='admin' />
            <div id="signup_forms" class="signup_forms clearfix">
                <div class="form_row first_row">
                    <label for="U_LoginName">
                        请输入用户名
                    </label>
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { placeholder = "请输入用户名" } })
                    @Html.ValidationMessageFor(model => model.UserName)
                    @*<input type="text" name="U_LoginName" placeholder="请输入用户名" id="U_LoginName" data-required="required" />*@
                </div>
                <div class="form_row">
                    <label for="U_Password">
                        请输入密码
                    </label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "请输入密码" } })
                    @Html.ValidationMessageFor(model => model.Password)
                    @*<input type="password" name="U_Password" placeholder="请输入密码" id="U_Password" data-required="required" />*@
                </div>
            </div>
            <div class="login-btn-set">
                <a href='javascript:void(0)' class='login-btn'></a>
            </div>
        </div>
    }
</body>
</html>
